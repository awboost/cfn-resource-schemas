{
  "$hash": "c679bf8779fcd37284b6a5de5cfa86f9861db453",
  "$id": "aws-directconnect-directconnectgatewayassociation.json",
  "additionalProperties": false,
  "createOnlyProperties": [
    "/properties/AcceptDirectConnectGatewayAssociationProposalRoleArn",
    "/properties/AssociatedGatewayId",
    "/properties/DirectConnectGatewayId"
  ],
  "description": "Resource Type definition for AWS::DirectConnect::DirectConnectGatewayAssociation",
  "handlers": {
    "create": {
      "permissions": [
        "directconnect:CreateDirectConnectGatewayAssociationProposal",
        "directconnect:CreateDirectConnectGatewayAssociation",
        "directconnect:DescribeDirectConnectGatewayAssociations",
        "sts:AssumeRole"
      ]
    },
    "delete": {
      "permissions": [
        "directconnect:DeleteDirectConnectGatewayAssociation",
        "directconnect:DescribeDirectConnectGatewayAssociations"
      ]
    },
    "list": {
      "handlerSchema": {
        "oneOf": [
          { "required": ["AssociatedGatewayId"] },
          { "required": ["DirectConnectGatewayId"] }
        ],
        "properties": {
          "AssociatedGatewayId": {
            "$ref": "resource-schema.json#/properties/AssociatedGatewayId"
          },
          "DirectConnectGatewayId": {
            "$ref": "resource-schema.json#/properties/DirectConnectGatewayId"
          }
        }
      },
      "permissions": ["directconnect:DescribeDirectConnectGatewayAssociations"]
    },
    "read": {
      "permissions": ["directconnect:DescribeDirectConnectGatewayAssociations"]
    },
    "update": {
      "permissions": [
        "directconnect:DescribeDirectConnectGatewayAssociations",
        "directconnect:UpdateDirectConnectGatewayAssociation",
        "sts:AssumeRole"
      ]
    }
  },
  "primaryIdentifier": ["/properties/AssociationId"],
  "properties": {
    "AcceptDirectConnectGatewayAssociationProposalRoleArn": {
      "description": "The Amazon Resource Name (ARN) of the role to accept the Direct Connect Gateway association proposal. Needs directconnect:AcceptDirectConnectGatewayAssociationProposal permissions.",
      "pattern": "^arn:aws[a-z-]*:iam::[0-9]{12}:role/.+$",
      "type": "string"
    },
    "AllowedPrefixesToDirectConnectGateway": {
      "description": "The Amazon VPC prefixes to advertise to the Direct Connect gateway. This parameter is required when you create an association to a transit gateway.",
      "insertionOrder": false,
      "items": {
        "description": "A CIDR block for the advertised route. An IPv6 CIDR must use /64 or shorter.",
        "pattern": "^[0-9a-fA-F:.]+/[0-9]+$",
        "type": "string"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "AssociatedGatewayId": {
      "anyOf": [
        {
          "relationshipRef": {
            "propertyPath": "/properties/VPNGatewayId",
            "typeName": "AWS::EC2::VPNGateway"
          }
        },
        {
          "relationshipRef": {
            "propertyPath": "/properties/Id",
            "typeName": "AWS::EC2::TransitGateway"
          }
        },
        {
          "relationshipRef": {
            "propertyPath": "/properties/TransitGatewayArn",
            "typeName": "AWS::EC2::TransitGateway"
          }
        }
      ],
      "description": "The ID or ARN of the virtual private gateway or transit gateway.",
      "pattern": "^((arn:aws[a-z-]*:ec2:[a-z0-9-]+:[0-9]{12}:(vpn-gateway/vgw|transit-gateway/tgw))|(vgw|tgw))-[a-zA-Z0-9]{8,32}$",
      "type": "string"
    },
    "AssociationId": {
      "description": "The ID of the Direct Connect gateway association.",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "type": "string"
    },
    "DirectConnectGatewayId": {
      "anyOf": [
        {
          "relationshipRef": {
            "propertyPath": "/properties/DirectConnectGatewayId",
            "typeName": "AWS::DirectConnect::DirectConnectGateway"
          }
        },
        {
          "relationshipRef": {
            "propertyPath": "/properties/DirectConnectGatewayArn",
            "typeName": "AWS::DirectConnect::DirectConnectGateway"
          }
        }
      ],
      "description": "The ID or ARN of the Direct Connect gateway.",
      "pattern": "^(arn:aws[a-z-]*:directconnect::[0-9]{12}:dx-gateway/)?[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "type": "string"
    }
  },
  "propertyTransform": {
    "/properties/AssociatedGatewayId": "$lowercase($substringAfter(AssociatedGatewayId, \"/\"))",
    "/properties/DirectConnectGatewayId": "$substringAfter(DirectConnectGatewayId, \"/\")"
  },
  "readOnlyProperties": ["/properties/AssociationId"],
  "required": ["DirectConnectGatewayId", "AssociatedGatewayId"],
  "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-resource-providers-directconnect",
  "tagging": { "taggable": false },
  "typeName": "AWS::DirectConnect::DirectConnectGatewayAssociation",
  "writeOnlyProperties": [
    "/properties/AcceptDirectConnectGatewayAssociationProposalRoleArn"
  ]
}
